{
  "name": "nttp-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Natural Text Transfer Protocol - Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev -w nttp",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "publish:all": "npm run build && npm publish --workspaces"
  },
  "keywords": [
    "nttp",
    "natural-language",
    "sql",
    "database",
    "llm",
    "claude",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^9.6.0"
  }
}
