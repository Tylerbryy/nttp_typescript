{
  "name": "nttp-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "nttp - natural text to query - Monorepo",
  "type": "module",
  "bin": {
    "nttp": "./dist/cli.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc && npm run build --workspaces",
    "build:cli": "tsc",
    "dev": "npx tsx src/cli.ts dev",
    "setup": "npx tsx src/cli.ts setup",
    "start": "npx tsx src/cli.ts start",
    "stats": "npx tsx src/cli.ts stats",
    "doctor": "npx tsx src/cli.ts doctor",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules dist",
    "publish:all": "npm run build && npm publish --workspaces"
  },
  "keywords": [
    "nttp",
    "natural-language",
    "sql",
    "database",
    "llm",
    "claude",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.0",
    "@ai-sdk/openai": "^3.0.0",
    "@faker-js/faker": "^10.1.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/prompts": "^2.4.9",
    "ai": "^6.0.1",
    "better-sqlite3": "^9.6.0",
    "boxen": "^8.0.1",
    "cac": "^6.7.14",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "gradient-string": "^3.0.0",
    "knex": "^3.1.0",
    "knex-schema-inspector": "^3.1.0",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prompts": "^2.4.2",
    "zod": "^3.25.76"
  }
}
